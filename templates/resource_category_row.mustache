{{!
    @template mod_bookit/resource_category_row
    Category row for table view

    Context variables:
    * id - Category ID
    * name - Category name
    * description - Category description (optional)
    * sortorder - Sort order
    * active - Active status

    Example context (json):
    {
        "id": 1,
        "name": "Technical Equipment",
        "description": "Audio and video equipment",
        "sortorder": 0,
        "active": true
    }
}}
<tr class="table-active bg-light border-bottom resource-category-row"
    id="resource-category-row-{{id}}"
    data-region="resource-category-row"
    data-categoryid="{{id}}"
    data-category-sortorder="{{sortorder}}"
    data-category-active="{{active}}"
    draggable="true">

    <td class="font-weight-bold text-dark py-3" colspan="3">
        <div class="d-flex align-items-center">
            <div class="drag-handle mr-2" data-action="drag-handle">
                <i class="fa fa-grip-vertical text-muted"></i>
            </div>
            <span>{{name}}</span>
            {{#description}}
                <small class="text-muted ml-2">({{{description}}})</small>
            {{/description}}
        </div>
    </td>

    <td class="py-3 text-center">
        <button class="btn btn-sm btn-primary"
                data-action="edit-category"
                data-category-id="{{id}}">
            {{#pix}}i/edit, core{{/pix}}
        </button>
        <button class="btn btn-sm btn-danger ml-1"
                data-action="delete-category"
                data-category-id="{{id}}">
            {{#pix}}t/delete, core{{/pix}}
        </button>
    </td>

    <td class="py-3 text-center">
        <div class="drag-handle" data-action="drag-handle">
            <i class="fa fa-grip-vertical text-muted"></i>
        </div>
    </td>
</tr>
