{{!
    @template mod_bookit/bookit_checklist_drag_handle
    This template renders a drag handle for sortable checklist items.

    Example context (json):
    {
        "id": 1,
        "type": "item"
    }
}}
<td class="bookit-drag-handle" id="bookit-drag-handle-{{type}}-{{id}}"
    data-bookit-drag-handle-id="{{id}}"
    data-bookit-drag-handle-type="{{type}}"
    data-bookit-drag-handle-{{type}}-id="{{id}}"
    style="cursor: grab;">
    {{#pix}} t/sort, core {{/pix}}
</td>

{{#js}}
require(['mod_bookit/drag_handle'], function(component) {
    component.init('#bookit-drag-handle-{{type}}-{{id}}');
});
{{/js}}
