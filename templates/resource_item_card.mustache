{{!
    @template mod_bookit/resource_item_card

    Resource item card.

    Context variables from resource_item_card::export_for_template()
}}
<div class="card mb-2 resource-item-card {{^active}}opacity-50{{/active}}"
     id="resource-item-{{id}}"
     data-item-id="{{id}}"
     data-item-categoryid="{{categoryid}}"
     data-item-sortorder="{{sortorder}}"
     data-item-active="{{active}}"
     data-reactive="item">

    <div class="card-body p-3 d-flex align-items-center">
        <div class="drag-handle mr-3" data-reactive="drag-handle">
            <i class="fa fa-grip-vertical text-muted"></i>
        </div>

        <div class="flex-grow-1">
            <strong>{{name}}</strong>
            {{#description}}
                <br><small class="text-muted">{{description}}</small>
            {{/description}}
        </div>

        <div class="mr-3">
            {{#amountirrelevant}}
                <span class="badge badge-secondary">{{#str}}resources:amount_irrelevant, mod_bookit{{/str}}</span>
            {{/amountirrelevant}}
            {{^amountirrelevant}}
                <span class="badge badge-info">{{amount}}x</span>
            {{/amountirrelevant}}
        </div>

        <div class="btn-group">
            <button class="btn btn-sm btn-primary"
                    data-reactive="edit-resource"
                    data-item-id="{{id}}">
                {{#str}}edit{{/str}}
            </button>

            <button class="btn btn-sm btn-danger"
                    data-reactive="delete-resource"
                    data-item-id="{{id}}">
                {{#str}}delete{{/str}}
            </button>
        </div>
    </div>
</div>
