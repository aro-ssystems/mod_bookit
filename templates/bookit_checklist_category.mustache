{{!
    @template mod_bookit/bookit_checklist_category
    This template renders a checklist category with its items as a table body.

    Example context (json):
    {
        "id": 1,
        "name": "Category Name",
        "masterid": 2,
        "checklistitems": [
            {
                "id": 3,
                "title": "Checklist Item",
                "order": "1",
                "categoryid": "1",
                "roomids": "[3,4]",
                "roomnames": [
                    {"roomid": 3, "roomname": "Room A"},
                    {"roomid": 4, "roomname": "Room B"}
                ],
                "roleid": "4",
                "rolename": "Student"
            }
        ]
    }
}}
<tbody id="bookit-master-checklist-tbody-category-{{id}}"
       data-bookit-tbody-category-id="{{id}}"
       data-bookit-category-name="{{name}}"
       data-bookit-category-id="{{id}}"
       data-bookit-category-masterid="{{masterid}}">
{{> mod_bookit/bookit_checklist_category_row }}
{{#checklistitems}}
    {{> mod_bookit/bookit_checklist_item }}
{{/checklistitems}}
</tbody>
{{#js}}
require(['mod_bookit/master_checklist_category'], function(component) {
    component.init('#bookit-master-checklist-tbody-category-{{id}}');
});
{{/js}}