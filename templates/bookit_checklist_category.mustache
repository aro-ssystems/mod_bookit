<tbody id="bookit-master-checklist-tbody-category-{{id}}" data-bookit-tbody-category-id="{{id}}" data-bookit-category-name="{{name}}" data-bookit-category-id="{{id}}">
<tr class="table-active bookit-category"
    data-bookit-category-id="{{id}}"
    data-bookit-category-name="{{name}}"
    data-bookit-category-order="{{order}}">
                <td>{{name}}</td>
                <td></td>
                <td></td>
                <td>
                    <button type="button" class="btn" value="{{id}}" name="edit-checklistcategory-{{id}}" id="edit-checklistcategory-{{id}}">
                        {{#pix}} i/edit, core {{/pix}}
                    </button>
                </td>
                <td>{{#pix}} t/sort, core {{/pix}}</td>
</tr>
{{#checklistitems}}
    {{{.}}}
{{/checklistitems}}
</tbody>
{{#js}}
require(['mod_bookit/master_checklist_category'], function(component) {
    component.init('#bookit-master-checklist-tbody-category-{{id}}');
});
{{/js}}