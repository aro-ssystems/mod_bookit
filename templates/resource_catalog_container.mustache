{{!
    @template mod_bookit/resource_catalog_container

    Resource catalog container (only structure, JS renders content).

    Context variables:
    * contextid - System context ID

    Example context (json):
    {
        "contextid": 1
    }
}}
<div class="mod-bookit-resource-catalog"
     id="mod-bookit-resource-catalog"
     data-contextid="{{contextid}}">

    {{! Spinner - shown initially }}
    <div class="d-flex justify-content-center my-5" id="mod-bookit-resource-spinner">
        <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
            <span class="sr-only">{{#str}}loading, core{{/str}}</span>
        </div>
    </div>

    {{! Content - populated by JS }}
    <div class="d-none" id="mod-bookit-resource-content">
        {{! Add Category Button }}
        <div class="mb-4">
            <button class="btn btn-primary"
                    data-action="add-category"
                    id="add-category-btn">
                {{#str}}resources:add_category, mod_bookit{{/str}}
            </button>
        </div>

        {{! Categories Container - JS renders here }}
        <div id="mod-bookit-resource-categories"></div>

        {{! No Categories Message - JS shows if empty }}
        <p class="text-muted d-none" id="mod-bookit-no-categories">
            {{#str}}resources:no_categories, mod_bookit{{/str}}
        </p>
    </div>
</div>
