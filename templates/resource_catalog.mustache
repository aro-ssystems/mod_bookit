{{!
    @template mod_bookit/resource_catalog

    Resource catalog container with categories and resources.

    Context variables:
    * contextid - System context ID
    * categories - Array of category objects

    Example context (json):
    {
        "contextid": 1,
        "categories": [
            {
                "id": 1,
                "name": "Category Name",
                "description": "Description",
                "sortorder": 0,
                "active": true,
                "resources": []
            }
        ]
    }
}}
<div class="mod-bookit-resource-catalog"
     id="mod-bookit-resource-catalog"
     data-contextid="{{contextid}}"
     data-reactive="catalog">

    <div class="d-flex justify-content-center my-5" id="mod-bookit-resource-spinner">
        <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
            <span class="sr-only">{{#str}}loading, core{{/str}}</span>
        </div>
    </div>

    <div class="d-none" id="mod-bookit-resource-content">
        <div class="mb-4">
            <button class="btn btn-primary"
                    data-reactive="add-category"
                    id="add-category-btn">
                {{#str}}resources:add_category, mod_bookit{{/str}}
            </button>
        </div>

        <div id="mod-bookit-resource-categories">
            {{#categories}}
                {{> mod_bookit/resource_category_card }}
            {{/categories}}
            {{^categories}}
                <p class="text-muted">{{#str}}resources:no_categories, mod_bookit{{/str}}</p>
            {{/categories}}
        </div>
    </div>
</div>
