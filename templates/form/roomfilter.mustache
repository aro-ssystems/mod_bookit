{{!
    @template mod_bookit/form/roomfilter

    Room filter form element with two-row toggle layout.

    Context variables:
    * name - Element name
    * id - Element ID
    * label - Element label
    * rooms_selected - Array of selected rooms
    * rooms_unselected - Array of unselected rooms

    Example context (json):
    {
        "name": "roomfilter",
        "id": "id_roomfilter",
        "label": "Filter by Rooms",
        "rooms_selected": [
            {
                "id": 1,
                "name": "Room A",
                "eventcolor": "#FF0000",
                "colorselected": "#FF0000",
                "colorunselected": "#FFB3B3"
            }
        ],
        "rooms_unselected": [
            {
                "id": 2,
                "name": "Room B",
                "eventcolor": "#00FF00",
                "colorselected": "#00FF00",
                "colorunselected": "#B3FFB3"
            }
        ]
    }
}}

<div class="filter-section" data-filter-id="{{id}}">
    {{#label}}
    <label class="filter-label">{{label}}</label>
    {{/label}}

    <div class="filter-group">
        <div class="filter-row-selected" data-row="selected">
            {{#rooms_selected}}
            <button type="button"
                    class="btn btn-sm btn-room-filter"
                    data-value="{{id}}"
                    data-room-name="{{name}}"
                    data-color-selected="{{colorselected}}"
                    data-color-unselected="{{colorunselected}}"
                    data-state="selected"
                    aria-pressed="true"
                    style="background-color: {{colorselected}}; color: #fff;">
                <span class="filter-icon">âœ“</span>
                {{name}}
            </button>
            {{/rooms_selected}}
        </div>

        <div class="filter-divider"></div>

        <div class="filter-row-unselected" data-row="unselected">
            {{#rooms_unselected}}
            <button type="button"
                    class="btn btn-sm btn-room-filter"
                    data-value="{{id}}"
                    data-room-name="{{name}}"
                    data-color-selected="{{colorselected}}"
                    data-color-unselected="{{colorunselected}}"
                    data-state="unselected"
                    aria-pressed="false"
                    style="background-color: {{colorunselected}}; color: #333;">
                <span class="filter-icon">+</span>
                {{name}}
            </button>
            {{/rooms_unselected}}
        </div>
    </div>

    {{! Hidden select element for form submission }}
    <select name="{{name}}" id="{{id}}" multiple style="display: none;">
        {{#rooms_selected}}
        <option value="{{id}}" selected>{{name}}</option>
        {{/rooms_selected}}
        {{#rooms_unselected}}
        <option value="{{id}}">{{name}}</option>
        {{/rooms_unselected}}
    </select>
</div>
