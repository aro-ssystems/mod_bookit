{{!
    @template mod_bookit/bookit_checklist_category_row
    This template renders a single checklist category row.

    Example context (json):
    {
        "id": 1,
        "name": "Category Name",
        "order": "1",
        "type": "category"
    }
}}
<tr class="table-active bookit-category bg-light border-bottom"
    id="bookit-master-checklist-category-row-{{id}}"
    data-bookit-category-id="{{id}}"
    data-bookit-category-name="{{name}}"
    data-bookit-category-order="{{order}}"
    data-bookit-drag-handle-category-id="{{id}}">
                <td class="font-weight-bold text-dark py-3">{{name}}</td>
                <td class="text-muted"></td>
                <td class="text-muted"></td>
                <td class="py-3 text-center">
                    <button type="button" class="btn btn-sm btn-light rounded-pill pl-3 text-dark" value="{{id}}" name="edit-checklistcategory-{{id}}" id="edit-checklistcategory-{{id}}">
                        {{#pix}} i/edit, core {{/pix}}
                    </button>
                </td>

                {{> mod_bookit/bookit_checklist_drag_handle }}
</tr>
